#!/usr/bin/env sh
# Завершить выполнение, если произойдет ошибка
set -e

# Подключаем дополнительные функции из другого файла (если нужно)
. "$(dirname "$0")/h"

# Путь к файлу с сообщением коммита
COMMIT_MSG_FILE="$1"

# Добавляем текст в начало сообщения коммита
echo "Task №:" > "$COMMIT_MSG_FILE"
echo "" >> "$COMMIT_MSG_FILE"