#!/usr/bin/env sh

# Путь к файлу с сообщением коммита
COMMIT_MSG_FILE="$1"

# Определяем стандарт формата сообщения коммита
MESSAGE_PATTERN='^([A-Z]{1}[a-z]+): (.+)'

# Проверяем, соответствует ли сообщение паттерну
if ! grep -qE "$MESSAGE_PATTERN" "$COMMIT_MSG_FILE"; then
    echo "Ошибка: Сообщение коммита должно быть в формате 'Тип: Описание'."
    exit 1
fi

echo "Сообщение коммита соответствует стандарту."